@using EntityLayer.Concrete
@model EntityLayer.Concrete.Location

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Edit Location";
}

<br />


@using (Html.BeginForm())
{
    <div class="container">
        <h2>Edit Location</h2>

        <div class="form-group">
            Id: @Html.TextBoxFor(x => x.location_id, new { @class = "form-control" })
        </div>
        <div class="form-group">
            City: @Html.TextBoxFor(x => x.city, new { @class = "form-control" })
        </div>
        <div class="form-group">
            District: @Html.TextBoxFor(x => x.district, new { @class = "form-control" })
        </div>
        <div class="form-group">
            Type: @Html.TextBoxFor(x => x.type, new { @class = "form-control" })
        </div>
        <div class="form-group">
            Name: @Html.TextBoxFor(x => x.name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            Rating: @Html.TextBoxFor(x => x.rating, new { @class = "form-control" })
        </div>
        <div class="form-group">
            Work Hours: @Html.TextBoxFor(x => x.workhours, new { @class = "form-control" })
        </div>
        <div class="form-group">
            Status: @Html.TextBoxFor(x => x.status, new { @class = "form-control" })
        </div>

        <br />

        <div class="form-group">
            <button class="btn btn-success">Edit</button>
        </div>

    </div>
}
